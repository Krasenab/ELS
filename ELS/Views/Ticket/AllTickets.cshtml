@model FilteredTicketsViewModel;
<main class="flex-grow bg-gray-50 font-sans antialiased py-12">

    <!-- Hero + Search -->
    <section class="bg-gradient-to-r from-indigo-600 to-sky-500 py-10 mb-8">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-white">
            <h1 class="text-4xl sm:text-5xl font-extrabold mb-4 flex items-center gap-3">
                <i class="fas fa-ticket-alt"></i>
                All Tickets
            </h1>
            <p class="opacity-90 mb-6 max-w-2xl">
                Browse, search and manage all your support tickets in one place.
            </p>
            <div class="flex flex-col sm:flex-row gap-4">
                <div class="relative flex-1">
                    <input id="search" type="search" placeholder="Search tickets…"
                           class="w-full pl-12 pr-4 py-3 rounded-full bg-white text-gray-900 placeholder-gray-400
                        focus:outline-none focus:ring-2 focus:ring-white focus:ring-opacity-50 transition" />
                    <span class="absolute left-4 top-1/2 -translate-y-1/2 text-gray-400">
                        <i class="fas fa-search"></i>
                    </span>
                </div>
                <div class="relative w-full sm:w-48">
                    <select id="status" class="w-full pl-4 pr-10 py-3 rounded-full bg-white text-gray-900 placeholder-gray-400
                         focus:outline-none focus:ring-2 focus:ring-white focus:ring-opacity-50 transition">
                        <option value="">All Statuses</option>
                        @foreach (var status in @Model.Statuses)
                        {
                            <option value="@status">@status</option>
                        }


                    </select>
                    <span class="absolute right-4 top-1/2 -translate-y-1/2 text-gray-400 pointer-events-none">
                        <i class="fas fa-chevron-down"></i>
                    </span>
                </div>
                <div class="relative w-full sm:w-48">
                    <select id="priority" class="w-full pl-4 pr-10 py-3 rounded-full bg-white text-gray-900 placeholder-gray-400
                         focus:outline-none focus:ring-2 focus:ring-white focus:ring-opacity-50 transition">
                        <option value="">Priorities</option>
                        @foreach (var pr in @Model.Priorities)
                        {
                            <option value="@pr">@pr</option>
                        }
                    </select>
                    <span class="absolute right-4 top-1/2 -translate-y-1/2 text-gray-400 pointer-events-none">
                        <i class="fas fa-chevron-down"></i>
                    </span>
                </div>
            </div>
        </div>
    </section>

    <!-- Tickets Grid -->
    
    <div id ="allTicketPartial" class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">

        <partial name="_AllFilteredTicketsPartial" model="@Model.AllTickets"></partial>

    </div>    
      
   

</main>

<script src="https://code.jquery.com/jquery-3.7.0.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/aos@2.3.4/dist/aos.js"></script>
<link href="https://cdn.jsdelivr.net/npm/aos@2.3.4/dist/aos.css" rel="stylesheet" />
<script>
    AOS.init({ duration: 600, once: true });

      function loadingTickets(search, status, priority)
     {
        

        $.get("/Ticket/AllFilteredTickets", {
            searchTerm: search,
            status: status,
            priority: priority
        }, function(html) {
           

            $("#allTicketPartial").html(html);
            AOS.refresh();
        });
    }

        $(function () {
       loadingTickets($('#search').val(), $('#status').val(), $('#priority').val());

        $('#search').on("input", function () {
            loadingTickets(this.value, $('#status').val(), $('#priority').val());
        });

        $('#status').on("change", function () {
            loadingTickets($('#search').val(), this.value, $('#priority').val());
        });

        $('#priority').on("change", function () {
            loadingTickets($('#search').val(), $('#status').val(), this.value);
        });
    });

</script>