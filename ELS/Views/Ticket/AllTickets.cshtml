@model FilteredTicketsViewModel;
<main class="flex-grow bg-gray-50 font-sans antialiased py-1">

    <!-- Hero + Search -->
    <section class="bg-gradient-to-r from-sky-400 to-indigo-600 py-16">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-white">
            <h1 class="text-4xl sm:text-5xl font-extrabold mb-4 flex items-center gap-3">
                <i class="fas fa-ticket-alt"></i>
                All Tickets
            </h1>
            <p class="opacity-90 mb-6 max-w-2xl">
                Browse, search and manage all your support tickets in one place.
            </p>
            <div class="flex flex-col sm:flex-row gap-4">
                <div class="relative flex-1">
                    <input id="search" type="search" placeholder="Search tickets…"
                           class="w-full pl-12 pr-4 py-3 rounded-full bg-white text-gray-900 placeholder-gray-400
                        focus:outline-none focus:ring-2 focus:ring-white focus:ring-opacity-50 transition" />
                    <span class="absolute left-4 top-1/2 -translate-y-1/2 text-gray-400">
                        <i class="fas fa-search"></i>
                    </span>
                </div>
                <div class="relative w-full sm:w-48">
                    <select id="status" class="appearance-none w-full pl-4 pr-10 py-3 rounded-full bg-white text-gray-900 placeholder-gray-400
                         focus:outline-none focus:ring-2 focus:ring-white focus:ring-opacity-50 transition">
                        <option value="">All Statuses</option>
                        @foreach (var status in @Model.Statuses)
                        {
                            <option value="@status">@status</option>
                        }


                    </select>
                    <span class="pointer-events-none absolute inset-y-0 right-4 flex items-center text-sky-400 text-md">
                        <i class="fas fa-chevron-down"></i>
                    </span>
                </div>
                <div class="relative w-full sm:w-48">
                    <select id="priority" class="appearance-none w-full pl-4 pr-10 py-3 rounded-full bg-white text-gray-900 placeholder-gray-400
                         focus:outline-none focus:ring-2 focus:ring-white focus:ring-opacity-50 transition">
                        <option value="">Priorities</option>
                        @foreach (var pr in @Model.Priorities)
                        {
                            <option value="@pr">@pr</option>
                        }
                    </select>
                    <span class="absolute right-4 top-1/2 -translate-y-1/2  text-sky-400 pointer-events-none">
                        <i class="fas fa-chevron-down"></i>
                    </span>
                </div>
            </div>
        </div>
    </section>

    <!-- Tickets Grid -->
    
    <div id ="allTicketPartial" class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-3">

        <partial name="_AllFilteredTicketsPartial" model="@Model"></partial>

    </div>    
      
   

</main>

<script src="https://code.jquery.com/jquery-3.7.0.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/aos@2.3.4/dist/aos.js"></script>
<link href="https://cdn.jsdelivr.net/npm/aos@2.3.4/dist/aos.css" rel="stylesheet" />
<script>
    AOS.init({ duration: 600, once: true });

    // Универсална функция за AJAX зареждане
    function loadingTickets(page = 1) {
        $.get("/Ticket/AllFilteredTickets", {
            searchTerm: $('#search').val(),
            status: $('#status').val(),
            priority: $('#priority').val(),
            page: page
        }, function (html) {
            $("#allTicketPartial").html(html);
            AOS.refresh();
        });
    }

    $(function () {
        // първоначално зареждане
        loadingTickets();

        // събития за филтрите
        $('#search').on("input", function () {
            loadingTickets(1); // при ново търсене почваме от страница 1
        });

        $('#status').on("change", function () {
            loadingTickets(1);
        });

        $('#priority').on("change", function () {
            loadingTickets(1);
        });

        // 👉 ВАЖНО: за pagination ползваме event delegation,
        // за да работи и след презареждане на partial-а
        $(document).on("click", ".pagination-btn", function () {
            var page = $(this).data("page");
            loadingTickets(page);
        });
    });
</script>